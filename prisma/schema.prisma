generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Transaction {
  id            Int      @id @default(autoincrement()) // 新しいデータに自動で番号を振る設定
  date          String
  category      String
  amount        Int
  paymentMethod String
  type          String   // "入金" か "出金"
  isActive      Boolean  @default(true) // デフォルトは「有効」
}